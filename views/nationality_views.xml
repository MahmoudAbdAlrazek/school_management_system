<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_res_nationality_form" model="ir.ui.view">
    <field name="name">res.nationality.form</field>
    <field name="model">res.nationality</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <record id="view_res_nationality_tree" model="ir.ui.view">
    <field name="name">res.nationality.tree</field>
    <field name="model">res.nationality</field>
    <!--<field name="field_parent">children_ids if_want_to_add_Childs</field>-->
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
      </tree>
    </field>
  </record>

  <record id="action_res_nationality" model="ir.actions.act_window">
    <field name="name">Res Nationality</field>
    <field name="res_model">res.nationality</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a new document
      </p>
    </field>

  </record>


</odoo>